<% include ./header %>

  <body class="skin-blue sidebar-mini" style="height: auto; min-height: 100%;">
   

      <!-- Content Header (Page header) -->
      <div class="content-wrapper" style="min-height: 645px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Attendance
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Attendance</li>
            
          </ol>
        </section>
        <!-- Main content -->
        <section class="content">
                <div class="row">
            <div class="col-xs-12">
              <div class="box">

                <div class="box-body">
                  <table id="attendance_table" class="table table-bordered">
                    <thead>
                      
                        <th >Employee ID</th>
                        <th >Name</th>
                        <th >In Time</th>
                        <th >Out time</th>
                        <th> Present</th>
                        <th >Absent</th>
                        <th >Leaves</th>
                        <th >Holidays</th>
                        <th> Tools</th>
                    </thead>
                    <tbody> 
                      <% for (let i=0; i<result.length; i++) {%>
                        
                        <tr> 
                                          
                          <td style="text-transform:uppercase ;"><%= result[i].emp_id %></td>
                          <td><%= result[i].FirstName  %> <%= result[i].LastName  %></td>
                          <td><%= result[i].In_Time  %></td>
                          <td><%= result[i].Out_Time %></td>
                          <td><%= result[i].Present %></td>
                          <td><%= result[i].Absent  %></td>
                          <td><%= result[i].Leaves  %></td>
                          <td><%= result[i].Holidays  %></td>
                          <td><a data-toggle="modal" data-target="#edit_attendance<%=result[i].id%>" ><button class="btn btn-success btn-sm btn-flat" ><i class="fa fa-edit"></i> Edit</button></a>
                          <a data-toggle="modal" data-target="#delete_attendance<%=result[i].id%>"><button class="btn btn-danger btn-sm btn-flat" ><i class="fa fa-trash"></i> Delete</button></a></td>
                          
                        </tr>
                        <%}%>                                                                                                                                          
                          
                    </tbody>
                  </table></div></div>
                </div>
              </div>
            </div>
          </div>
        </section>   
      </div> 
           
   <% include ./footer %>
   <% include ./attendance_modal %>
   
 </body>