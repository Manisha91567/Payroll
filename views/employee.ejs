<% include ./header %>

  <body class="skin-blue sidebar-mini" style="height: auto; min-height: 100%;">
   

      <!-- Content Header (Page header) -->
      <div class="content-wrapper" style="min-height: 645px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Employee List
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Employees</li>
            <li class="active">Employee List</li>
          </ol>
        </section>
        <!-- Main content -->
        <section class="content">
                <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header with-border">
                  
                   <a data-toggle="modal" data-target="#addnew" class="btn btn-primary btn-sm btn-flat"><i class="fa fa-plus"></i> New</a>
            
                  </div>
                <div class="box-body">
                  <table id="employee_table" class="table table-bordered">
                    <thead>
                      
                        <th >Employee ID</th>
                        <th >Name</th>
                        <th >Address</th>
                        <th >Birthdate</th>
                        <th> Contact</th>
                        <th >Gender</th>
                        <th >Job Type</th>
                        <th >Position</th>
                        <th >Joining Date</th>
                        <th >Leaving Date</th>
                        <th >Salary</th>
                        <th> Tools</th>
                    </thead>
                    <tbody> 
                      <% for (let i=0; i<result.length; i++) {%>
                        
                        <tr>                                          
                          <td style="text-transform:uppercase ;"><%= result[i].emp_id %></td>
                          <td><%= result[i].FirstName  %> <%= result[i].LastName  %></td>
                          <td><%= result[i].Address  %></td>
                          <td><%= result[i].Birthdate %></td>
                          <td><%= result[i].Contact %></td>
                          <td><%= result[i].Gender  %></td>
                          <td><%= result[i].JobType  %></td>
                          <td><%= result[i].Position  %></td>
                          <td><%= result[i].Joining_Date  %></td>
                          <td><%= result[i].Leaving_Date  %></td>
                          <td><%= result[i].Salary  %></td>
                          <td><a data-toggle="modal" data-target="#edit_employee<%=result[i].id%>" ><button class="btn btn-success btn-sm btn-flat" ><i class="fa fa-edit"></i> Edit</button></a>
                          <a data-toggle="modal" data-target="#delete_employee<%=result[i].id%>"><button class="btn btn-danger btn-sm btn-flat" ><i class="fa fa-trash"></i> Delete</button></a></td>
                          
                        </tr>
                        <%}%>                                                                                                                                          
                          
                    </tbody>
                  </table></div></div>
                </div>
              </div>
            </div>
          </div>
        </section>   
      </div> 
           
   <% include ./footer %>
   <% include ./employee_modal %>
   
 </body>
 