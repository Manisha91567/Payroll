<!-- Edit -->
<% for (let i=0; i<result.length; i++) {%>
    <div class="modal fade" id="edit_attendance<%=result[i].id%>">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><b><span class="employee_id" style="text-transform: uppercase;">
                        TS<%= result[i].FirstName %><%= result[i].id  %>
                            </span></b></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" method="POST" action="/attendance/edit">
                        <input type="hidden" class="empid" name="id" value="<%=result[i].id%>">
                
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">In Time</label>

                            <div class="col-sm-9">
                                <div class="date">
                                    <input type="date" class="form-control"  name="intime"
                                        value="<%=result[i].In_Time%>">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Out Time</label>

                            <div class="col-sm-9">
                                <div class="date">
                                    <input type="date" class="form-control"  name="outtime"
                                        value="<%=result[i].Out_Time%>">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="edit_contact" class="col-sm-3 control-label">Present</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edit_contact" name="present"
                                    value="<%=result[i].Present%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="edit_contact" class="col-sm-3 control-label">Absent</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edit_contact" name="Absent"
                                    value="<%=result[i].Absent%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="edit_contact" class="col-sm-3 control-label">Leaves</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edit_contact" name="leaves"
                                    value="<%=result[i].Leaves%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="edit_contact" class="col-sm-3 control-label">Holidays</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edit_contact" name="holidays"
                                    value="<%=result[i].Holidays%>">
                            </div>
                        </div>
                     
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat pull-left" data-dismiss="modal"><i
                            class="fa fa-close"></i> Close</button>
                    <button type="submit" class="btn btn-success btn-flat" name="edit"><i
                            class="fa fa-check-square-o"></i> Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%}%>


        <!-- Delete -->
        <% for (let i=0; i<result.length; i++) {%>
            <div class="modal fade" id="delete_attendance<%=result[i].id%>">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title"><b>Deleting...</b></h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal">
                                <input type="hidden" class="decid" name="id" value="<%=result[i].id%>">
                                <div class="text-center">
                                    <p>DELETE DEDUCTION</p>
                                    <h2 id="del_deduction" class="bold">
                                        <%=result[i].FirstName%>
                                            <%=result[i].LastName%>
                                    </h2>
                                </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default btn-flat pull-left" data-dismiss="modal"><i
                                    class="fa fa-close"></i> Close</button>
                            <a href="/attendance/delete/<%=result[i].id%>"><button type="button"
                                    class="btn btn-danger btn-flat"><i class="fa fa-trash"></i> Delete</button></a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>