<% include header %>

  <body class="skin-blue sidebar-mini" style="height: auto; min-height: 100%;">
   

      <!-- Content Header (Page header) -->
      <div class="content-wrapper" style="min-height: 645px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
              Payroll
          </h1>
          <ol class="breadcrumb">
            <li><a href="/admin/home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Payroll</li>
          </ol>
        </section>
        <!-- Main content -->
        <section class="content">
                <div class="row">
            <div class="col-xs-12">
              <div class="box">
               
                <div class="box-body">
                  <table id="employee_table" class="table table-bordered">
                    <thead>
                      
                        <th >Employee ID</th>
                        <th >Name</th>
                        <th >Joining Date</th>
                        <th >Total Days</th>
                        <th> Payble Days</th>
                        <th >Gross Date</th>
                        <th >Allowance</th>
                        <th >Overtime</th>
                        <th >Issue Date</th>
                        <th >Deduction</th>
                        <th> Net Salary</th>
                    </thead>
                    <tbody> 
                      <% for (let i=0; i<result.length; i++) {%> 
                        <tr>                 
                          <td style="text-transform:uppercase ;"><%= result[i].id %></td>
                          <td><%= result[i].FirstName  %> <%= result[i].LastName  %></td>
                          <td><%= result[i].Joining_Date  %></td>
                          <td><%= result[i].Total_Days %></td>
                          <td><%= result[i].Payble_Days %></td>
                          <td><%= result[i].Gross_Salary %></td>
                          <td><%= result[i].Allowance %></td>
                          <td><%= result[i].Overtime%></td>
                          <td><%= result[i].Issue_Date  %></td>
                          <td><%= result[i].Deduction  %></td>
                          <td><%= result[i].Net_salary %></td>
                          <td><a data-toggle="modal" data-target="#edit_employee<%=result[i].id%>" ><button class="btn btn-success btn-sm btn-flat" ><i class="fa fa-edit"></i> Edit</button></a>
                          <a data-toggle="modal" data-target="#delete_employee<%=result[i].id%>"><button class="btn btn-danger btn-sm btn-flat" ><i class="fa fa-trash"></i> Delete</button></a></td>
                        </tr>
                        <%}%>                                                                                                                                               
                    </tbody>
                  </table></div></div>
                </div>
              </div>
            </div>
          </div>
        </section>   
      </div> 
           
   <% include footer %>
 </body>