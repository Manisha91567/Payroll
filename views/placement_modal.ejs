
<!-- Edit -->
<% for (let i=0; i<result.length; i++) {%>
    <div class="modal fade" id="edit_payroll<%=result[i].id%>">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><b><span >
                        <%= result[i].FirstName %> <%= result[i].LastName  %>
                            </span></b></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" method="POST" action="/placement/edit">
                        <input type="hidden" class="deptid" name="id" value="<%=result[i].id%>">
                     
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Select Date</label>

                            <div class="col-sm-9">
                                <div>
                                    <input type="date" class="form-control"  name="sdate">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Select Time</label>

                            <div class="col-sm-9">
                                <div >
                                    <input type="time" class="form-control"  name="stime">
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat pull-left" data-dismiss="modal"><i
                            class="fa fa-close"></i> Close</button>
                    <button type="submit" class="btn btn-success btn-flat" name="edit"><i
                            class="fa fa-check-square-o"></i> Schedule</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%}%>
   